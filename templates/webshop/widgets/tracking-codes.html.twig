    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-K0TW2891BW');

        {% if isInitiateCheckout is defined and isInitiateCheckout is not empty %}
        gtag('event', 'begin_checkout', {
            affiliation: '{{ storeName }}',
            currency: 'HUF',
            items: [
                {%- for item in order.items -%}
                {
                    item_id: '{{ item.product.sku }}',
                    item_name: '{{ item.product.name }}',
                    item_brand: '{{ storeBrand }}',
                    item_category: '{{ item.product.categories|first }}',
                    price: {{ item.unitPrice }},
                    currency: 'HUF',
                    quantity: {{ item.quantity }}
                }
                {%- if loop.last == false -%}
                    ,
                {%- endif -%}
                {%- endfor -%}
            ],
            value: {{ order.summary.totalAmountToPay }}
        });
        {% endif %}
        {% if isPurchase is defined and isPurchase is not empty %}
        gtag('event', 'purchase', {
            affiliation: '{{ storeName }}',
            currency: 'HUF',
            items: [
                {%- for item in order.items -%}
                {
                    item_id: '{{ item.product.sku }}',
                    item_name: '{{ item.product.name }}',
                    item_brand: '{{ storeBrand }}',
                    item_category: '{{ item.product.categories|first }}',
                    price: {{ item.unitPrice }},
                    currency: 'HUF',
                    quantity: {{ item.quantity }}
                }
                {%- if loop.last == false -%}
                ,
                {%- endif -%}
                {%- endfor -%}
            ],
            transaction_id: '{{ order.number }}',
            shipping: 0,
            value: {{ order.summary.totalAmountToPay }},
            tax: 0
        })
        {% endif %}

    </script>

