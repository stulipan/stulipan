<div class="pt-1">
    <ul class="order-summary mb-0 list-unstyled">
        <li class="order-summary-item">
            <span class="order-summary-item-label">{{ 'cart.subtotal'|trans }} </span>
            <span>{{  order.summary.totalBeforeDiscount|money }}</span>
        </li>
        <li class="order-summary-item">
            <div class="order-summary-item-label">
                {% if order.shippingMethod is defined and order.shippingMethod is not null %}
                    {{ order.shippingMethod.name }}
                {% else %}
                    {{ 'cart.shipping-fee'|trans }}
                {% endif %}
            </div>
            <div class="w-50 text-right" >
                                    <span class="JS--orderSummary-shippingFee" data-shipping-fee="{{ order.shippingFeeToPay }}">
                                        {%- if order.hasShippingFee is defined and order.hasShippingFee -%}
                                            {{ order.shippingFeeToPay|money }}
                                        {%- else -%}
                                            {{ 'cart.shipping-fee-calculated-in-next-step'|trans }}
                                        {%- endif -%}
                                    </span>
            </div>
        </li>

        <li class="order-summary-item JS--orderSummary-paymentBody {% if order.hasPaymentFee == false %}d-none{% endif %}">
            <div class="JS--orderSummary-paymentName order-summary-item-label">
                {%- if order.paymentMethod is defined and order.paymentMethod is not null -%}
                    {{ order.paymentMethod.name }}
                    {#                                    {% else %}#}
                    {#                                        {{ 'cart.shipping-fee'|trans }}#}
                {%- endif -%}
            </div>
            <div class="w-50 text-right" >
                                    <span class="JS--orderSummary-paymentFee" data-payment-fee="{{ order.paymentFeeToPay }}">
                                        {{ order.paymentFeeToPay|money }}
                                    </span>
            </div>
        </li>
        {% if flowerShopMode %}
            <li class="order-summary-item">
                <div class="order-summary-item-label">{{ 'cart.scheduling-fee'|trans }}</div>
                <div class="w-50 text-right">
                                    <span class="JS--orderSummary-schedulingPrice" data-scheduling-price="{{ order.schedulingPrice }}">
                                        {{ order.schedulingPrice|money }}
                                    </span>
                </div>
            </li>
        {% endif %}
        {% if false == true %}
            <li class="order-summary-item">
                <span class="order-summary-item-label">{{ 'cart.discount'|trans }}</span>
                <span>25%:</span>
            </li>
        {% endif %}
        <li class="order-summary-item border-0">
            <div class="order-summary-item-label">{{ 'cart.total-amount-to-pay'|trans }}</div>
            <div class="JS--orderSummary-amountToPay order-summary-total" data-items-price="{{ order.summary.itemsPrice }}">
                <span class="JS--orderSummary-amountToPayBody">{{ order.summary.totalAmountToPay|money }}</span>
            </div>
        </li>
    </ul>
</div>


