<div class="">
    <h5 class="checkout-block-title">{{ 'checkout.customer.customer-information-title'|trans }}</h5>
</div>
<div class="mt-2">
    <div class="h-100">
        <div class="">
            {{ order.fullname }} <br>
            {% if order.phone is defined and order.phone is not empty %}{{ order.phone }},{% endif %} {{ order.email }} <br>
            <div class="mt-2 text-muted">
                {{ 'checkout.sender.sender'|trans }} <br>
                {% if order.billingFullname is defined and order.billingFullname is not null %}
                    {{ order.billingFullname }} {{ order.billingCompany is defined and order.billingCompany ? ' / ' ~ order.billingCompany : ''}}
                {% else %}
                    {% include 'admin/_missing-data-insert.html.twig' %}
                {% endif %}
                <br>
                {% if order.billingPhone is defined and order.billingPhone %}
                    {{ order.billingPhone }}
                {% else %}
                    {% include 'admin/_missing-data-insert.html.twig' %}
                {% endif %}
                <span class="">
                {% if order.billingAddress is defined and order.billingAddress %} <br>
                    {{ order.billingAddress.zip }} {{ order.billingAddress.city }}, {{ order.billingAddress.street }}, {{ order.billingAddress.province }}, {{ order.billingAddress.country }}
                {% else %}
                    {% include 'admin/_missing-data-insert.html.twig' %}
                {% endif %}
                </span>
            </div>
        </div>
    </div>
</div>