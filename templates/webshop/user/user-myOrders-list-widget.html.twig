                    {% if order.updatedAt is defined and order.updatedAt is not empty %}
                    <div class="text-muted">
                        <span class="font-weight-bold">{{ 'account.order.order-placed-at'|trans }}</span>
                        <span class="">{{ order.updatedAt|localizedDate }}</span>
                    </div>
                    {% endif %}
                </div>
