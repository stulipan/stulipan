{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{%- block title -%}
    {{ pageTitle }}
{%- endblock -%}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    <div class="row">
        <div class="col-lg-12 col-sm-11 mx-auto">
            {% block header %}
                <div class="row mt-1 mt-sm-3">
                    <div class="col-lg-12 mt-2">
{#                    <div class="col-lg-12">#}
{#                        {% include 'admin/template-widget-breadcrumb.html.twig' %}#}
{#                    </div>#}
                        <div class="header-wrapper">
                            <div class="header-goback">
                                <div class="x">
                                    {% if breadcrumb is defined and breadcrumb is not empty %}
                                        {% for item in breadcrumb %}
                                            {% if loop.last %}
                                                <a href="{{ item.url }}" class="btn btn-secondary btn-go-back"></a>
                                            {% endif %}
                                        {% endfor %}
                                    {% endif %}
                                </div>
                            </div>
                            <div class="header-title">
                                <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center">
                                    <div class="page-title h3 d-inline mr-md-2 mr-1">{% block headerTitle %}{{ pageTitle }}{% endblock %}</div>
                                    {% block headerTopright %}
                                    {% endblock %}
                                </div>
                            </div>
                            <div class="header-actions">
                                {% block headerActionsWrapper %}
                                {% endblock %}
                            </div>
                        </div>
                        <div class="pb-2 pb-md-3 border-bottom">
                        </div>
                        <div class="col-lg-12">
                            {% block alertBlock %}{% endblock %}
                        </div>
                    </div>
                </div>
            {% endblock %}

            {% block content %}
                <div class="row mt-3 mt-md-20px">
                    <div class="col-md-4">
                        <div class="pr-md-5 pr-lg-6">
                            <div class="h5 font-weight-bold">{% block moduleTitle %}{% endblock %}</div>
                            <div class="text-muted mt-2 mt-md-2">{% block moduleDescription %}{% endblock %}</div>
                        </div>
                        {% block moduleButtons %}
                            <div class="">
                            </div>
                        {% endblock %}
                    </div>

                    <div class="col-md-8 correction-no-padding mt-3 mt-md-0">
                        <div class="card mb-20px">
                            <div class="card-body">
                                {% block contentInner %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}

