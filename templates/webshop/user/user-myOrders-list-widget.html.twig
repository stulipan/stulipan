<div class="">
    <div class="d-flex justify-content-between pb-2 border-bottom">
        <div class="mr-3">
            <div class="font-weight-bold text-uppercase">{{ 'account.order.order-number'|trans }}</div>
            <div class="">#{{ order.number }}</div>
        </div>
        <div>
            {% if order.isPaid %}
                <div class="badge badge-success">{{ 'account.order.paid'|trans }}</div>
            {% else %}
                <div class="badge badge-warning">{{ 'account.order.waiting-for-payment'|trans }}</div>
            {% endif %}
            {% if order.isFulfilled %}
                <div class="badge badge-success">{{ 'account.order.fulfilled'|trans }}</div>
            {% else %}
                <div class="badge badge-warning">{{ 'account.order.being-processed'|trans }}</div>
            {% endif %}
        </div>

{#        <div class="">#}
{#            <div class="font-weight-bold text-uppercase">Kézbesítés napja: </div>#}
{#            <div class="">2019-09-24</div>#}
{#        </div>#}
    </div>

    <div class="d-flex flex-column flex-md-row justify-content-between mt-4">
        <div class="w-100 w-md-50 d-flex align-items-center justify-content-center justify-content-md-start">
            <div class="d-flex flex-column justify-content-center align-items-center align-items-md-start">
                <div class="d-flex">
