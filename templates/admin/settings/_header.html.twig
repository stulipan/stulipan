<div class="row mt-3 mb-3">
    {% if backToUrl is defined and backToUrl is not null %}
    <div class="col-lg-12 mb-3">
        <i class="fas fa-angle-left text-muted mr-0"></i> <a href="{{ path(backToUrl) }}" class="btn-link-secondary">{{ backToText }}</a>
    </div>
    {% endif %}
    <div class="col-lg-12">
        <div class="pb-2 border-bottom mb-3">
            <div class="page-title h1 d-inline mr-md-2 mr-1">{{ pageTitle }}</div>
        </div>
    </div>
</div>