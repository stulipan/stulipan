{% extends 'webshop/site/base-site.html.twig' %}

{% block bodyClass %}my-account{% endblock %}

{% block page_content %}

    {% block modal %}
    {% endblock %}

    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-11 col-xl-10 mx-auto">
                {% block header %}
                    <div class="row mt-3 d-none d-md-block">
                        <div class="col-lg-12">
                            <div class="">
                                <ul class="breadcrumb undefined">
                                    {% if breadcrumb is defined and breadcrumb is not empty %}
                                        {% for item in breadcrumb %}
                                            <li class="breadcrumb-item"><a class="text-decoration-none" href="{{ item.url }}">{{ item.text }}</a></li>
                                        {% endfor %}
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endblock %}

                <div class="row mt-3">
                    <div class="col-md-4 correction-no-padding">
                        {% block sidebar %}
                            <div class="account-sidebar card mb-20px">
                                <div class="list-group list-group-flush">
                                    <a href="{{ path('site-user-myAccount') }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-inline-flex align-items-center">
                                                <svg class="icon">
                                                    <use xlink:href="#person"></use>
                                                </svg>
                                                {{ 'account.my-account'|trans }}
                                            </div>
                                            <div class="d-flex">
                                                <svg class="icon mr-0">
                                                    <use xlink:href="#chevron-right"></use>
                                                </svg>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="{{ path('site-user-myOrders') }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-inline-flex align-items-center">
                                                <svg class="icon">
                                                    <use xlink:href="#bag-check"></use>
                                                </svg>
                                                {{ 'account.my-orders'|trans }}
                                            </div>
                                            <div class="d-flex">
                                                <svg class="icon mr-0">
                                                    <use xlink:href="#chevron-right"></use>
                                                </svg>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="{{ path('site-user-myDetails') }}" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="d-inline-flex align-items-center">
                                                <svg class="icon">
                                                    <use xlink:href="#person-lines-fill"></use>
                                                </svg>
                                                {{ 'account.account-information'|trans }}
                                            </div>
                                            <div class="d-flex">
                                                <svg class="icon mr-0">
                                                    <use xlink:href="#chevron-right"></use>
                                                </svg>
                                            </div>
                                        </div>
                                    </a>
{#                                    <a href="{{ path('site-user-myAccount') }}" class="list-group-item list-group-item-action">#}
{#                                        <div class="d-flex justify-content-between align-items-center">#}
{#                                            <div class="d-inline-flex align-items-center">#}
{#                                                <i class="fa fa-sign-in-alt mr-2"></i>#}
{#                                                {{ 'account.change-password'|trans }}#}
{#                                            </div>#}
{#                                            <div class="d-flex">#}
{#                                                <i class="fas fa-chevron-right"></i>#}
{#                                            </div>#}
{#                                        </div>#}
{#                                    </a>#}
                                </div>
                            </div>
                        {% endblock %}
                    </div>
                    <div class="col-md-8 mb-4">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="back-to-my-account mb-3 mb-md-0">
                                    <a href="{{ path('site-user-myAccount') }}" class="text-decoration-none">
                                        <svg class="icon">
                                            <use xlink:href="#arrow-left"></use>
                                        </svg>
                                        {{ 'account.my-account'|trans }}
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-12 correction-no-padding">
                                {% block content %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

