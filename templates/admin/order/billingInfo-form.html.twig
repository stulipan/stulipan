            <div class="form-group col-sm-4 col-6 pr-lg-2">
                <label for="{{ senderForm.billingAddress.province.vars.full_name }}" class="form-label">Megye</label>
                {{ form_widget(senderForm.billingAddress.province, {'attr': {'class': 'JS--form-province'}}) }}
                {{ form_errors(senderForm.billingAddress.province) }}
            </div>
            <div class="form-group col-sm-3 col-6 pl-lg-2">
                <label for="{{ senderForm.billingAddress.zip.vars.full_name }}" class="form-label">Irányítószám</label>
                {{ form_widget(senderForm.billingAddress.zip, {'attr': {'class': 'JS--form-zip', 'data-url' : path('cart-getPlaceByZip') }}) }}
                {{ form_errors(senderForm.billingAddress.zip) }}
            </div>
        </div>
    </div>
</div>


