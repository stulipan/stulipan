            <div class="JS--Wrapper-summary JS--cartWrapperX">
                <div class="loading-spinner-faded">
                    <div class="">
                        <span class="h6">{{ 'cart.cart-content'|trans }}</span>
                        <a class="text-link-checkout float-right" href="{{ path('site-checkout-step0-pickExtraGift') }}">{{ 'generic.edit'|trans }}</a>
                    </div>
                    <div class="cart mt-3">
                        <div class="JS--resultWrapper">
                            {% include 'webshop/cart/cart.html.twig' with {
                                'showMessage': true,
                                'showQuantity': false,
                                'showRemove': false,
                                'showSummary': false,
                                'hasProductLink': false,
                            } %}
                        </div>
                    </div>
                    <div class="pt-1">

                        <ul class="order-summary mb-0 list-unstyled">
                            <li class="order-summary-item">
                                <span class="order-summary-item-label">{{ 'cart.subtotal'|trans }} </span>
                                <span>{{  order.summary.totalBeforeDiscount|money }}</span>
                            </li>
                            <li class="order-summary-item">
                                <div class="order-summary-item-label">{{ 'cart.shipping-fee'|trans }}</div>
                                <div class="w-50 text-right" >
                                        <span class="JS--Wrapper-shippingPrice" data-shipping-price="{{ order.shippingPrice }}">
                                            {%- if order.hasShippingPrice is defined and order.hasShippingPrice -%}
                                                {{ order.shippingPriceToPay|money }}
                                            {%- else -%}
                                                {{ 'cart.shipping-fee-calculated-in-next-step'|trans }}
                                            {%- endif -%}
                                        </span>
                                </div>
                            </li>
                            {% if flowerShopMode %}
                            <li class="order-summary-item">
                                <div class="order-summary-item-label">{{ 'cart.scheduling-fee'|trans }}</div>
                                <div class="w-50 text-right">
                                    <span class="JS--Wrapper-schedulingPrice" data-scheduling-price="{{ order.schedulingPrice }}">
                                        {{ order.schedulingPrice|money }}
                                    </span>
                                </div>
                            </li>
                            {% endif %}
                            {% if false == true %}
                                <li class="order-summary-item">
                                    <span class="order-summary-item-label">{{ 'cart.discount'|trans }}</span>
                                    <span>25%:</span>
                                </li>
                            {% endif %}
                            <li class="order-summary-item border-0">
                                <div class="order-summary-item-label">{{ 'cart.total-amount-to-pay'|trans }}</div>
                                <div class="JS--Wrapper-amountToPay order-summary-total" data-price-total="{{ order.summary.priceTotal }}">
                                    <span class="JS--Wrapper-amountToPayBody">{{ order.summary.totalAmountToPay|money }}</span>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="loading-spinner" role="status"></div>
            </div>