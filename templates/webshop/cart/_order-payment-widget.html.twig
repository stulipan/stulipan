    <h5 class="checkout-block-title">{{ 'checkout.payment.payment-method'|trans }}</h5>

    <div class="mt-2">
        <div class="d-flex justify-content-between">
            <div class="">
                {% if order.paymentMethod is defined and order.paymentMethod is not empty %}
                    {{ order.paymentMethod.name }}
                {% else %}
                    {% include 'admin/_missing-data-insert.html.twig' %}
                {% endif %}
            </div>
            {% if order.isPaid == true %}
            <div>
                <span class="mr-1 badge badge-success">{{ order.paymentStatus }}</span>
            </div>
            {% endif %}
        </div>

        <div class="mt-1">
        {% if order.paymentMethod is defined and order.paymentMethod %}
            <div class="text-muted">
                {% if order.paymentMethod.image %}
                    <div class="mt-2">
                        <img class="h-20px" src="{{ asset('/uploads/images/icons/' ~ order.paymentMethod.image) }}" />
                    </div>
                {% endif %}
            </div>
            {% if order.isBankTransfer is defined and order.isBankTransfer == true %}
                <div class="mt-3">
                    {{ order.paymentMethod.description|raw }}
                </div>
            {% endif %}
        {% else %}
            {% include 'admin/_missing-data-insert.html.twig' %}
        {% endif %}
        </div>
    </div>