{% extends 'admin/base_admin.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{%- block title -%}
    {{ pageTitle }}
{%- endblock -%}

{% block page_content %}

    <div {% block dataSection %}{% endblock %}>

        {% block modal %}
        {% endblock %}

        <div class="row">
            <div class="col-lg-12">
                {% block header %}
                    <div class="row mt-1 mt-sm-3">
                        {#                    <div class="col-lg-12">#}
                        {#                        {% include 'admin/template-widget-breadcrumb.html.twig' %}#}
                        {#                    </div>#}

                        <div class="col-lg-12 mt-2">
                            <div class="header-wrapper">
                                <div class="header-goback">
                                    <div class="x">
                                        {% if breadcrumb is defined and breadcrumb is not empty %}
                                            {% for item in breadcrumb %}
                                                {% if loop.last %}
                                                    <a href="{{ item.url }}" class="btn btn-secondary btn-go-back"></a>
                                                {% endif %}
                                            {% endfor %}
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="header-title">
                                    <div class="d-flex flex-columnX flex-sm-row justify-content-between align-items-center align-items-sm-center">
                                        <div class="page-title h3 d-inline mr-md-2 mr-1">{{ pageTitle }}</div>
                                        <div class="d-flex justify-content-between">
                                            {% block headerTopright %}
                                            {% endblock %}
                                        </div>
                                    </div>
                                </div>
                                <div class="header-actions">
                                    {% block headerActionsWrapper %}
                                    {% endblock %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% endblock %}

                {% block beforeContent %}
                {% endblock %}

                {% block content %}
                    <div class="row mt-2 mt-sm-3">
                        <div class="col-12 correction-no-padding">
                            <div class="card mb-20px">
                                {% block contentFilter %}
                                {% endblock %}
                                {% block contentInner %}
                                    <div class="table-responsive mt-3">
                                        <table class="table table-hover mb-0">
                                            <thead class="thead-light">
                                                {% block tableHeader %}
                                                {% endblock %}
                                            </thead>
                                            <tbody>
                                                {% block tableBody %}
                                                {% endblock %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {% block tableEmpty %}
                                    {% endblock %}
                                    {% block pagination %}
                                        {% if paginator is defined and paginator is not empty %}
                                            {% if paginator.nbResults > paginator.maxPerPage %}
                                            <div class="card-body">
                                                <div class="pagerfanta">
                                                    {{ pagerfanta(paginator, 'twitter_bootstrap4', { 'prev_message': '← ' ~ 'generic.prev'|trans, 'next_message': 'generic.next'|trans ~ ' →'}) }}
                                                </div>
                                            </div>
                                            {% endif %}
                                        {% else %}
                                        {% endif %}
                                    {% endblock %}
                                {% endblock %}
                            </div>
                            <div class="mb-20px text-muted">
                                {% block afterTable %}
                                {% endblock %}
                            </div>
                            <div class="mb-20px">
                                &nbsp;
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>

{% endblock %}

