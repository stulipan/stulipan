                // showRangesAsDropdown: true,
                // showDropdowns: true,
                drops: "auto",
                // timePicker: true,
                // timePickerSeconds: true,
                // timePicker24Hour: true,

                // maxDate: moment(),
                locale: {
                    // format: 'YYYY/MM/DD',
                    // format: 'MMM DD, [<span class="text-muted">]YYYY[</span>]',
                    format: 'MMM DD, YYYY',
                    separator: ' - ',
                    dateRange: "{{ 'datetime.date-range'|trans }}",
                    customRangeLabel: "{{ 'datetime.custom-range'|trans }}",
                    applyLabel: "{{ 'generic.apply'|trans }}",
                    cancelLabel: "{{ 'generic.delete'|trans }}",
                    daysOfWeek: [
                        "{{ 'datetime.sun'|trans }}",
                        "{{ 'datetime.mon'|trans }}",
                        "{{ 'datetime.tue'|trans }}",
                        "{{ 'datetime.wed'|trans }}",
                        "{{ 'datetime.thu'|trans }}",
                        "{{ 'datetime.fri'|trans }}",
                        "{{ 'datetime.sat'|trans }}",
                    ],
                    monthNames: [
                        "{{ 'datetime.january'|trans }}",
                        "{{ 'datetime.february'|trans }}",
                        "{{ 'datetime.march'|trans }}",
                        "{{ 'datetime.april'|trans }}",
                        "{{ 'datetime.mayy'|trans }}",
                        "{{ 'datetime.june'|trans }}",
                        "{{ 'datetime.july'|trans }}",
                        "{{ 'datetime.august'|trans }}",
                        "{{ 'datetime.september'|trans }}",
                        "{{ 'datetime.october'|trans }}",
                        "{{ 'datetime.november'|trans }}",
                        "{{ 'datetime.december'|trans }}",
                    ],
                    firstDay: 1,
                },

                buttonClasses: 'btn',
                applyClass: 'btn-primary',
                cancelClass: 'btn-secondary',
            }
            dateField.daterangepicker(dateSettings);
            sidebarDateField.daterangepicker(sidebarDateSettings);

            // Ha van dateRange a query-ben, akkor a ketto datumot betoltom a datum valasztoba
            let string = "{{ app.request.query.get('dateRange') is defined ? app.request.query.get("dateRange") : false }}";
            if (string) {
                picker = dateField.data('daterangepicker');
                picker.setStartDate(moment(string.split(picker.locale.separator)[0], 'YYYY-MM-DD'));
                picker.setEndDate(moment(string.split(picker.locale.separator)[1], 'YYYY-MM-DD'));

                pickerS = sidebarDateField.data('daterangepicker');
                pickerS.setStartDate(moment(string.split(pickerS.locale.separator)[0], 'YYYY-MM-DD'));
                pickerS.setEndDate(moment(string.split(pickerS.locale.separator)[1], 'YYYY-MM-DD'));
            }


            // mobilon a hatter ezzel nem mozog, nem gorgeti
            dateField.on('show.daterangepicker', function(ev, picker) {
                picker.parentEl.addClass('daterangepicker-overflow-hiddenX');
            });
            // ujra gorgetheto a hatter
            dateField.on('hide.daterangepicker', function(ev, picker) {
                picker.parentEl.removeClass('daterangepicker-overflow-hiddenX');
            });
            dateField.on('apply.daterangepicker', function(ev, picker) {
                $(this).val(picker.startDate.format('YYYY-MM-DD') + picker.locale.separator + picker.endDate.format('YYYY-MM-DD'));
                $(this).focus();
                picker.hide();
            });
            dateField.on('cancel.daterangepicker', function(ev, picker) {
                picker.startDate = moment();
                picker.endDate = moment();
                $(this).val('');
            });
            $('#JS--idosav .JS--clearDate').on('click', function(ev) {
                ev.preventDefault();
                dateField.val('');
                dateField.data('daterangepicker').setStartDate(moment());
                dateField.data('daterangepicker').setEndDate(moment());
            });


            sidebarDateField.on('show.daterangepicker', function(ev, pickerS) {
                pickerS.parentEl.addClass('daterangepicker-overflow-hiddenX');
            });
            // ujra gorgetheto a hatter
            sidebarDateField.on('hide.daterangepicker', function(ev, pickerS) {
                pickerS.parentEl.removeClass('daterangepicker-overflow-hiddenX');
            });
            sidebarDateField.on('apply.daterangepicker', function(ev, pickerS) {
                $(this).val(pickerS.startDate.format('YYYY-MM-DD') + pickerS.locale.separator + pickerS.endDate.format('YYYY-MM-DD'));
                $(this).focus();
                pickerS.hide();
            });
            sidebarDateField.on('cancel.daterangepicker', function(ev, pickerS) {
                pickerS.startDate = moment();
                pickerS.endDate = moment();
                $(this).val('');
            });
            $('#JS--idosavS .JS--clearDateS').on('click', function(ev) {
                ev.preventDefault();
                sidebarDateField.val('');
                sidebarDateField.data('daterangepicker').setStartDate(moment());
                sidebarDateField.data('daterangepicker').setEndDate(moment());
            });
        });
    </script>
{% endblock %}


