    <div class="col-lg-12">
        <div class="form-row">
            <div class="form-group col-sm-6 pr-lg-2">
                <label for="{{ senderForm.billingFirstname.vars.full_name }}" class="form-label">Keresztnév</label>
                {{ form_widget(senderForm.billingFirstname, {'attr': {'class': ''}}) }}
                {{ form_errors(senderForm.billingFirstname) }}
