            <div class="form-group col-md-12 pl-lg-2">
                <label for="{{ senderForm.billingAddress.street.vars.full_name }}" class="form-label">Címe</label>
                {{ form_widget(senderForm.billingAddress.street, {'attr': {'class': 'form-controlX'}}) }}
                {{ form_errors(senderForm.billingAddress.street) }}
            </div>
            <div class="form-group col-md-12 pr-lg-2">
                <label for="{{ senderForm.billingAddress.city.vars.full_name }}" class="form-label">Város</label>
                {{ form_widget(senderForm.billingAddress.city, {'attr': {'class': 'JS--form-city'}}) }}
                {{ form_errors(senderForm.billingAddress.city) }}
            </div>
            <div class="form-group col-sm-5 col-12 pl-lg-2">
                <label for="{{ senderForm.billingAddress.country.vars.full_name }}" class="form-label">Ország</label>
                {{ form_widget(senderForm.billingAddress.country, {'attr': {'class': 'form-control'}}) }}
