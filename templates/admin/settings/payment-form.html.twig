    {{ form_start(form, { 'attr': {'class': '' }}) }}
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group row">
                <div class="col-sm-4 col-lg-3">
                    {{ form_label(form.name, 'Megnevezés', {'label_attr': {'class': ''}}) }}
{#                        <label for="{{ form.name.vars.full_name }}" class="">Megnevezés</label>#}
                </div>
                <div class="col-sm-8 col-lg-9">
                    {{ form_widget(form.name, {'attr': {
                        'class': '',
                    }}) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-lg-3">
                    {{ form_label(form.name, 'Shortcode', {'label_attr': {'class': ''}}) }}
                    {#                        <label for="{{ form.name.vars.full_name }}" class="">Megnevezés</label>#}
                </div>
                <div class="col-sm-8 col-lg-9">
                    {{ form_widget(form.shortcode, {'attr': {
                        'class': '',
                    }}) }}
                    {{ form_errors(form.shortcode) }}
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-lg-3">
                    {{ form_label(form.name, 'settings.payment.additional-details'|trans, {'label_attr': {'class': ''}}) }}
                    {#                        <label for="{{ form.name.vars.full_name }}" class="">Megnevezés</label>#}
                </div>
                <div class="col-sm-8 col-lg-9">
                    {{ form_widget(form.short, {'attr': {
                        'class': '',
                    }}) }}
                    {{ form_errors(form.short) }}
                    <div class="form-text">{{ 'settings.payment.additional-details-help'|trans }}</div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-lg-3">
{#                        {{ form_label(form.description) }}#}
                    <label for="{{ form.description.vars.full_name }}" class="">{{ 'settings.payment.payment-instructions'|trans }}</label>
                </div>
                <div class="col-sm-8 col-lg-9">
                    {{ form_widget(form.description, {'attr': {'class': 'JS--tinymceShort', rows: 6}}) }}
                    {{ form_errors(form.description) }}
                    <div class="form-text">{{ 'settings.payment.payment-instructions-help'|trans }}</div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-4 col-lg-3">
{#                        {{ form_label(form.price) }}#}
                    <label for="{{ form.price.vars.full_name }}" class="">Fizetési díj</label>
                </div>
                <div class="col-sm-8 col-lg-6 ">
                    <div class="field-group">
                        <div class="field-item">
                            <div class="field-prepend">
                                <div class="field-addon-prepend w-addon-smX">HUF</div>
                            </div>
                            {{ form_widget(form.price) }}
                            {{ form_errors(form.price) }}
                        </div>
                    </div>
                </div>
            </div>

                <div class="form-group row">
                    <div class="col-sm-4 col-lg-3">
{#                        {{ form_label(form.ordering) }}#}
                        <label for="{{ form.ordering.vars.full_name }}" class="">Sorrend</label>
                    </div>
                    <div class="col-sm-8 col-lg-6 ">
                        {{ form_widget(form.ordering) }}
                        {{ form_errors(form.ordering) }}
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-4 col-lg-3">
                        {#{{ form_label(form.enabled) }}#}
{#                        <label">Engedélyezve</label>#}
                        <label for="{{ form.enabled.vars.full_name }}" class="X">Engedélyezve</label>
                    </div>
                    <div class="col-sm-8 col-lg-9">
                        <input type="checkbox" id="{{ form.enabled.vars.id }}" name="{{ form.enabled.vars.full_name }}" required="required" class="form-check-input" value="{{ form.enabled.vars.value }}" {{ form.enabled.vars.checked == 1 ? 'checked=\"checked\"' : ''}} data-switch="primary">
                        <label class="form-check-label required" for="{{ form.enabled.vars.id }}" data-on-label="Igen" data-off-label="Nem"></label>

                        {{ form_errors(form.enabled) }}
                        {% do form.enabled.setRendered() %}
                    </div>
                </div>


			{# Render CSRF token etc .#}
			<div style="display:none">
				{{ form_rest(form) }}
			</div>

            <div class="">
                <div class="form-group row mt-4 mb-0">
                    <div class="col-sm-4 col-lg-3">
                    </div>
                    <div class="col-sm-8 col-lg-9">
                        <input type="submit" value="Mentés" class="btn btn-primary mr-1" formnovalidate>
                        <a href="{{ cancelUrl }}" class="btn btn-secondary">Mégse</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    {{ form_end(form) }}