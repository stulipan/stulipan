{#                    </div>#}

                    {% for item in order.items %}
                        <div class="position-relative mb-2 mr-2">
                            <div class="">
                                <img class="img-fluid" src="{{ uploaded_asset(item.product.coverImage)|imagine_filter('product_small') }}" width="80px;" />
                            </div>
                            <a href="{{ path('site-product-show', {'slug': item.product.slug}) }}" class="tile-link"></a>
                        </div>
